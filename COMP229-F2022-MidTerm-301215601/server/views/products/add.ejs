<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Product Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter a Product"
                    name="name" required>
                </div>

                <div class="form-group">
                    <label for="descriptionTextArea">Description</label>
                    <textarea type="text" class="form-control"
                    id="descriptionTextArea"
                    placeholder="Enter a brief description of the Product"
                    name="description" required></textarea>
                </div>

                <div class="form-group">
                    <label for="priceTextField">Price</label>
                    <input type="text" class="form-control"
                    id="priceTextField"
                    placeholder="Enter the Product's Price"
                    name="price" required>
                </div>
                <a href="/products" class="btn btn-primary" role="button">
                    <i class="fa fa-check-square-o"></i> Submit</a>
                                   
                    <a href="/products" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>

